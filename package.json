{
  "name": "cordova-plugin-webpack",
  "version": "1.0.5",
  "description": "Cordova Webpack Plugin",
  "files": [
    "dist",
    "plugin.xml"
  ],
  "cordova": {
    "id": "cordova-plugin-webpack",
    "platforms": [
      "android",
      "ios",
      "browser"
    ]
  },
  "scripts": {
    "upgrade-interactive": "npm-check --update",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "build": "rimraf dist/* && tsc --skipLibCheck && NODE_OPTIONS=--openssl-legacy-provider webpack",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "commit": "commit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "npm run changelog && cordova-set-version plugin.xml && git add CHANGELOG.md plugin.xml",
    "github-release": "conventional-github-releaser -p angular -r 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kotarella1110/cordova-plugin-webpack.git"
  },
  "keywords": [
    "cordova",
    "webpack",
    "ecosystem:cordova",
    "cordova-browser",
    "cordova-android",
    "cordova-ios"
  ],
  "author": "Kotaro Sugawara",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kotarella1110/cordova-plugin-webpack/issues"
  },
  "homepage": "https://github.com/kotarella1110/cordova-plugin-webpack#readme",
  "dependencies": {
    "@sindresorhus/is": "^4.0.1",
    "create-html": "^4.1.0",
    "csp-parse": "0.0.2",
    "current-device": "^0.10.1",
    "elementtree": "^0.1.7",
    "express": "^5.1.0",
    "glob": "^7.1.7",
    "is-ua-webview": "^1.0.5",
    "react-dev-utils": "^11.0.4",
    "source-map-support": "^0.5.19",
    "supports-color": "^8.1.1",
    "yargs": "^16.2.0",
    "yargs-unparser": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/prompt-cli": "^12.1.4",
    "@types/elementtree": "^0.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^15.6.2",
    "@types/react-dev-utils": "^9.0.7",
    "@types/supports-color": "^8.1.1",
    "@types/webpack": "^5.28.5",
    "@types/yargs": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "all-contributors-cli": "^6.20.0",
    "clean-webpack-plugin": "^4.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-github-releaser": "^3.1.5",
    "cordova-set-version": "^12.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "lint-staged": "^11.1.0",
    "npm-check": "^5.9.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "strip-ansi": "6.0.1",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "string-width": "4.2.2",
    "string-width-cjs": "5.1.1",
    "strip-ansi": "6.0.1",
    "strip-ansi-cjs": "8.0.0",
    "wrap-ansi": "8.0.0",
    "wrap-ansi-cjs": "8.0.0",
    "@types/glob": "npm:glob@^7.1.7"
  },
  "peerDependencies": {
    "webpack": "^5.0.0",
    "webpack-cli": "^6.0.0",
    "webpack-dev-server": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
